<?xml version="1.0" encoding="utf-8"?>
<resources>



    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_240_160</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Saber_y_beber</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="view_buttons" parent="ThemeOverlay.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
        <item name="backgroundTint">@color/grey</item>
    </style>

    <style name="correctTextViews" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">15sp</item>
        <item name="backgroundTint">@color/grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center|start</item>
        <item name="minHeight">32sp</item>
    </style>

    <style name="circledEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAlignment">center</item>
    </style>


</resources>

